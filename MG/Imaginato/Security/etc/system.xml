<?xml version="1.0"?>

<config>
    <sections>
        <admin>
            <groups>
                <security>
                    <fields>
                        <white_list_ips translate="label">
                            <label>Login White list IP</label>
                            <comment><![CDATA[Multiple IP is separated by "," ]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </white_list_ips>
                        <login_exception_alert_status translate="label">
                            <label>Login Exception Alert Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </login_exception_alert_status>
                        <login_exception_alert_email_template translate="label">
                            <label>Login Exception Alert Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </login_exception_alert_email_template>
                        <login_exception_alert_email_sender translate="label">
                            <label>Login Exception Alert Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </login_exception_alert_email_sender>
                        <login_exception_alert_email_copyto translate="label">
                            <label>Login Exception Alert Email Copy To</label>
                            <comment>Comma-separated.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </login_exception_alert_email_copyto>
                    </fields>
                </security>
            </groups>
        </admin>
    </sections>
</config>
