<?xml version="1.0"?>

<config>
   <sections>
        <elasticsearch_advanced_search_settings>
            <groups>
                <debug_log translate="label">
                    <label>Log Records</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>800</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <enable translate="label">
                            <label>Enable search log in log/debug</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                        </enable>
                        <search_min_size>
                            <label>Search product min size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <validate>required-entry</validate>
                            <frontend_class>validate-digits validate-digits-range validate-zero-or-greater</frontend_class>
                            <show_in_default>1</show_in_default>
                        </search_min_size>
                        <refresh_max_size>
                            <label>Refresh product max size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <validate>required-entry</validate>
                            <frontend_class>validate-digits validate-digits-range validate-zero-or-greater</frontend_class>
                            <show_in_default>1</show_in_default>
                        </refresh_max_size>
                    </fields>
                </debug_log>
            </groups>
        </elasticsearch_advanced_search_settings>

    </sections>
</config>
